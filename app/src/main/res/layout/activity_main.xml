<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center"
    android:orientation="horizontal">

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/fl_animation"
        android:layout_width="300px"
        android:layout_height="230px" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="1000px"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_think"
            android:layout_width="220px"
            android:layout_height="100px"
            android:text="思考"
            android:textSize="32px" />

        <Button
            android:id="@+id/btn_email"
            android:layout_width="220px"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/btn_think"
            android:text="邮件"
            android:textSize="32px" />

        <Button
            android:id="@+id/btn_music"
            android:layout_width="220px"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/btn_email"
            android:text="音乐"
            android:textSize="32px" />

        <Button
            android:id="@+id/btn_nod"
            android:layout_width="220px"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:layout_below="@id/btn_think"
            android:text="点头"
            android:textSize="32px" />

        <Button
            android:id="@+id/btn_repair"
            android:layout_width="220px"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:layout_below="@id/btn_think"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/btn_think"
            android:text="维修"
            android:textSize="32px" />
    </RelativeLayout>

</LinearLayout>